{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "target": "es6",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "lib/": ["lib/"],
            "models/": ["app/models/"],
            "builders/": ["app/builders/"],
            "actors/": ["app/actors/"],
            "vendor": ["vendor/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
